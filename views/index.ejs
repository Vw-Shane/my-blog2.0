<div class="posts mt-4">
    <div class="row">
        <% categories.forEach(category => { %>
    <% const categoryPosts = posts.filter(post => post.category === category); %>
    <% if (categoryPosts.length > 0) { %>
        <% const recentPost = categoryPosts[categoryPosts.length - 1]; %>
       
        <div class="col-md-4">
             <h2 class="category-header">
                    <%= category %>
                </h2>
            <div class="post-container" onclick="window.location.href='/post/<%= recentPost.category %>/<%= recentPost.id %>'">
                <h3><%= recentPost.title %></h3>
                <p><%= recentPost.date.toDateString() %></p>
                <% if (recentPost.images && recentPost.images.length > 0) { %>
                <img src="<%= recentPost.images[0] %>" class="img-fluid" alt="Post Image">
                <% } %>
            </div>
        </div>
        <% } %>
        <% }); %>
    </div>
</div>


