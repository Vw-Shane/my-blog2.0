<body class="bg-dark text-white">
    <%- include('nav') %>
    <div class="container mt-2 intro">
        <h4 class="text-center">
            Welcome to my blog!<br>
            Here, youâ€™ll find recent and pinned posts, plus a link to my store.<br>
            Dive into specific topics and categories along with their related posts using the menu above.<br>
            Feel free to <a href="[subscription-link]">subscribe</a> to all categories or choose individual topics.<br>
            Enjoy!
        </h4>
    </div>
    <div class="container mt-5">
        <div class="posts mt-4">
            <div class="row">
                <% categories.forEach(category => { %>
                <% const recentEntry = entries[category.id]; %>
                <% if (recentEntry) { %>
                <div class="col-md-4">
                    <div class="card category-card <%= recentEntry.photo_link ? '' : 'no-image' %>" style="<%= recentEntry.photo_link ? `background-image: url('${recentEntry.photo_link}');` : '' %>" onclick="window.location.href='/post/<%= recentEntry.category_id %>/<%= recentEntry.post_id || recentEntry.project_id %>'">
                        <div class="card-body">
                            <h2 class="category-header">
                                <%= category.categoryname %>
                            </h2>
                            <div class="post-container">
                                <h5>
                                    <%= recentEntry.title %>
                                </h5>
                                <p>
                                    <%= new Date(recentEntry.createdate).toLocaleDateString() %>
                                </p>
                            </div>
                            <!--   <% if (recentEntry.photo_link) { %>
                            <img src="<%= recentEntry.photo_link %>" class="img-fluid" alt="Post Image">
                            <% } %> -->
                        </div>
                    </div>
                </div>
                <% } %>
                <% }); %>
            </div>
        </div>
    </div>
