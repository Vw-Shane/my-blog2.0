<body class="bg-dark text-white">
    <div class="container mt-5">
        <h1 class="text-center">My Blog</h1>
        <div class="posts mt-4">
            <div class="category-section">
                <h2 class="category-header">Legos</h2>
                <div class="row">
                    <% posts.filter(post => post.category === 'Legos').forEach((post, index) => { %>
                    <div class="col-md-4">
                        <div class="post-container" onclick="location.href='/post/<%= index %>';">
                            <div class="post">
                                <h3>
                                    <%= post.title %>
                                </h3>
                                <% if (post.images && post.images.length) { %>
                                <img src="<%= post.images[0] %>" class="img-fluid" alt="Post Image">
                                <% } %>
                                <p>
                                    <%= post.date.toDateString() %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
            <div class="category-section">
