<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    .post-image-top img {
      display: block;
      margin: 0 auto 20px;
    }
    .post-image-bottom img {
      display: block;
      margin: 20px auto 0;
    }
    .post-image-left {
      display: flex;
    }
    .post-image-left img {
      margin-right: 20px;
    }
    .post-image-right {
      display: flex;
      flex-direction: row-reverse;
    }
    .post-image-right img {
      margin-left: 20px;
    }
  </style>
</head>
<body class="bg-dark text-white">
  <div class="container mt-5">
    <h1 class="text-center">My Blog</h1>
    <div class="posts">
      <div class="post mt-4">
        <h2><%= post.title %></h2>
        <p><%= post.date.toDateString() %></p>
        <% if (post.layout === 'top') { %>
          <div class="post-image-top">
            <% (post.images || []).forEach((image, index) => { %>
              <img src="<%= image %>" class="img-fluid" alt="Post Image">
            <% }); %>
            <p><%= post.content %></p>
          </div>
        <% } else if (post.layout === 'bottom') { %>
          <div class="post-image-bottom">
            <p><%= post.content %></p>
            <% (post.images || []).forEach((image, index) => { %>
              <img src="<%= image %>" class="img-fluid" alt="Post Image">
            <% }); %>
          </div>
        <% } else if (post.layout === 'left') { %>
          <div class="post-image-left">
            <% (post.images || []).forEach((image, index) => { %>
              <img src="<%= image %>" class="img-fluid" alt="Post Image">
            <% }); %>
            <p><%= post.content %></p>
          </div>
        <% } else if (post.layout === 'right') { %>
          <div class="post-image-right">
            <% (post.images || []).forEach((image, index) => { %>
              <img src="<%= image %>" class="img-fluid" alt="Post Image">
            <% }); %>
            <p><%= post.content %></p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
